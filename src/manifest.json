{
  "manifest_version": 3,
  "name": "Bigscoots Performance Debugger",
  "version": "1.0.1",
  "description": "A comprehensive tool for analyzing website performance metrics including cache headers, CDN status, preloaded fonts and images, and various optimization features. Perfect for debugging BigScoots hosting configurations and performance optimizations.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Bigscoots Performance Debugger",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://portal.bigscoots.com/*",
        "*://wpo-admin.bigscoots.com/*",
        "*://wpo.bigscoots.com/*",
        "*://*.bigscoots-wpo.com/*",
        "*://*.aws.amazon.com/*",
        "*://*.google.com/*",
        "*://*.googleapis.com/*",
        "*://*.gstatic.com/*",
        "*://*.googleusercontent.com/*",
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.linkedin.com/*",
        "*://*.microsoft.com/*",
        "*://*.office.com/*",
        "*://*.live.com/*",
        "*://*.outlook.com/*",
        "*://*.apple.com/*",
        "*://*.icloud.com/*",
        "*://github.com/*",
        "*://*.github.com/*",
        "*://gitlab.com/*",
        "*://*.gitlab.com/*",
        "*://bitbucket.org/*",
        "*://*.bitbucket.org/*",
        "*://stackoverflow.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.stackexchange.com/*",
        "*://reddit.com/*",
        "*://*.reddit.com/*",
        "*://discord.com/*",
        "*://*.discord.com/*",
        "*://*.slack.com/*",
        "*://zoom.us/*",
        "*://*.zoom.us/*",
        "*://teams.microsoft.com/*",
        "*://dropbox.com/*",
        "*://*.dropbox.com/*",
        "*://onedrive.com/*",
        "*://*.onedrive.com/*",
        "*://drive.google.com/*",
        "*://netflix.com/*",
        "*://*.netflix.com/*",
        "*://spotify.com/*",
        "*://*.spotify.com/*",
        "*://twitch.tv/*",
        "*://*.twitch.tv/*",
        "*://amazon.com/*",
        "*://*.amazon.com/*",
        "*://ebay.com/*",
        "*://*.ebay.com/*",
        "*://paypal.com/*",
        "*://*.paypal.com/*",
        "*://stripe.com/*",
        "*://*.stripe.com/*",
        "*://localhost/*",
        "*://127.0.0.1/*",
        "*://cloudflare.com/*",
        "*://*.cloudflare.com/*",
        "*://jsdelivr.net/*",
        "*://*.jsdelivr.net/*",
        "*://unpkg.com/*",
        "*://cdnjs.cloudflare.com/*",
        "*://bootstrapcdn.com/*",
        "*://*.bootstrapcdn.com/*",
        "*://fontawesome.com/*",
        "*://*.fontawesome.com/*",
        "*://fonts.googleapis.com/*",
        "*://fonts.gstatic.com/*"
      ],
      "js": [
        "content.js"
      ],
      "type": "module"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
